<%= form_with model: product, class: "w-full max-w-lg" do |form| %>
  <div class="mb-4">
    <div class="mb-2">
      <%= form.label :name, class: "block text-gray-700 font-medium" %>
    </div>
    <% @product.errors.full_messages_for(:name).each do |msg| %>
      <p class="text-red-500 text-sm mb-1"><%= msg %></p>
    <% end %>
    <div>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mt-6">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
